apt-get install -y --mark-auto baobab deja-dup gnome-calendar simple-scan totem usb-creator-gtk
feature add flatpak libreoffice
feature add flatpak snapshot
feature add flatpak thunderbird
feature add flatpak transmission
flatpak update -y --noninteractive --system
