PACKAGES=$(shell find * -prune -type d | tr '\n' ' ')

.PHONY: all $(PACKAGES) clean

all: $(PACKAGES)

$(PACKAGES):
	$(MAKE) -C $@ -f build

clean:
	for pkg in $(PACKAGES); do \
		$(MAKE) -C $$pkg -f build clean; \
	done
